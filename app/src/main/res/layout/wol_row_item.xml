<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:id="@+id/WOLCardview"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/RelativeLayoutWOLProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/ProfilTypeImg"
            android:src="@drawable/type_monitor"
            android:contentDescription="ProfileType" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:layout_toEndOf="@+id/ProfilTypeImg"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:id="@+id/NameProfil_WOL"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[IP]"
            android:layout_toEndOf="@+id/ProfilTypeImg"
            android:layout_below="@+id/NameProfil_WOL"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:id="@+id/IPProfil_WOL"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[MAC]"
            android:layout_toEndOf="@+id/ProfilTypeImg"
            android:layout_below="@+id/IPProfil_WOL"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:id="@+id/MACProfil_WOL"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/favorite_x64"
            android:layout_gravity="end"
            android:id="@+id/FavProfil"
            android:layout_alignParentEnd="true"
            android:contentDescription="Fav" />

        <ImageButton
            android:layout_below="@+id/FavProfil"
            android:layout_gravity="bottom"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/delete_x48"
            android:backgroundTint="#F00"
            android:id="@+id/DelProfil"
            android:layout_alignParentEnd="true"
            android:contentDescription="Del" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
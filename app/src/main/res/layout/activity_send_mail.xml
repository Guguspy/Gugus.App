<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".SendMail"
    android:background="@color/colorPrimaryLight"
    android:textColor="#000"
    >

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_home_24"
        android:padding="5dp"

        android:onClick="backhome"

        android:background="@drawable/button_style_1"


        android:layout_marginBottom="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/ET_Destinataire"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="75dp"


        android:hint="Destinataire"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_mailto_x36"
        android:drawablePadding="20dp"
        android:textSize="14dp"

        android:background="@drawable/round_edittext"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ET_Subject"
        />


    <EditText
        android:id="@+id/ET_Subject"
        android:layout_width="250dp"
        android:layout_height="60dp"

        android:allowUndo="true"
        

        android:hint="Sujet"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_title_x36"
        android:drawablePadding="10dp"
        android:textSize="14dp"

        android:background="@drawable/round_edittext"

        app:layout_constraintTop_toBottomOf="@+id/ET_Destinataire"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ET_Message"
        />

    <EditText
        android:id="@+id/ET_Message"
        android:layout_width="250dp"
        android:layout_height="200dp"

        android:hint="Message"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_message_x36"
        android:drawablePadding="10dp"
        android:textSize="14dp"
        android:padding="10dp"
        android:gravity="top"

        android:background="@drawable/round_edittext"

        app:layout_constraintTop_toBottomOf="@id/ET_Subject"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/BTN_SendMail"
        app:layout_constraintBottom_toTopOf="@id/LayoutFastMail"
        />

    <ImageButton
        android:id="@+id/BTN_SendMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"

        app:layout_constraintTop_toBottomOf="@+id/ET_Subject"
        app:layout_constraintLeft_toRightOf="@+id/ET_Message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"

        android:onClick="sendmail"
        android:src="@drawable/ic_send_x64"

        android:padding="5dp"

        android:background="@drawable/button_style_1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutFastMail"

        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="@drawable/white_rectangle_background"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TV_FastSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Send To OTP.Python@gmail.com"

            android:gravity="center"

            app:layout_constraintTop_toTopOf="@+id/BTN_SendMailfast"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/BTN_SendMailfast"
            app:layout_constraintBottom_toBottomOf="@+id/BTN_SendMailfast"

            android:drawableEnd="@drawable/ic_arrow_toright_x24"

            android:textColor="#000"
            />

        <ImageButton
            android:id="@+id/BTN_SendMailfast"
            android:layout_width="36dp"
            android:layout_height="36dp"


            app:layout_constraintTop_toTopOf="@+id/TV_FastSend"
            app:layout_constraintLeft_toRightOf="@+id/TV_FastSend"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/TV_FastSend"

            android:layout_marginTop="60dp"

            android:gravity="center"

            android:onClick="sendmailfast"
            android:src="@drawable/ic_send_x24"

            android:padding="5dp"

            android:background="@drawable/button_style_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>